@model TrashCollector.Models.Customer

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<h1>Account Home Page</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <div>
        <p><h3>Welcome @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)!</h3></p>
        <p><h4>Account Balance: @Html.DisplayFor(model => model.Balance)<h4></p>
    </div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Zipcode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Zipcode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PickupDay)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PickupDay.PickupDayId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartHold)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartHold)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndHold)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndHold)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExtraPickupDay)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExtraPickupDay)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Balance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Balance)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CustomerId">Edit Your Account</a>
</div>
